---

import '../styles/global.scss';

import Layout from '../layouts/Layout.astro';
import Navigation from '../components/header.astro';
import Footer from '../components/footer.astro';

---

<style lang="scss">
    @use '../styles/_breakpoints.scss' as device;

    :global(body){
        background-color: var(--pink);
        overflow-x:hidden;

        .site-wrapper::before{
			background-color:transparent !important;
		}
    }

    div.name{
        margin-top:60px;
        margin-bottom: 60px;
        display:-webkit-box;
        display:-ms-flexbox;
        display:flex;
        justify-content:center;
        -ms-flex-wrap:wrap;
            flex-wrap:wrap;

        h1{
            margin:0;
            font-family:"syne-extrabold", "vremena-grotesk-book", sans-serif;
            font-size:var(--h2);
            text-align: center;
            line-height: 0.8;
        }

        @media only screen and (min-width: device.$tablet){
            margin-top:80px;
            h1{
                font-size: var(--h1);
            }
        }
    }

    section.recipe{
        margin-top:0;
        margin-bottom:50px;
        display:-webkit-box;
        display:-ms-flexbox;
        display:flex;
        -webkit-box-orient:vertical;
        -webkit-box-direction:normal;
        -ms-flex-direction:column;
                flex-direction:column;
        -webkit-box-align:center;
        -ms-flex-align:center;
        align-items:center;

        .ingredients-wrapper{
            display:-webkit-box;
            display:-ms-flexbox;
            display:flex;
            -webkit-box-orient:vertical;
            -webkit-box-direction:normal;
                -ms-flex-direction:column;
                    flex-direction:column;
            gap:50px;
            margin:32px 0;
            width:100%;

            position:relative;

            &::before,
            &::after{
                content:'';
                position:absolute;
                width:100vw;
                left:-20px;
                border:1px dashed var(--dark-gray);
            }

            &:before{
                top:-32px;
            }

            &:after{
                bottom:-32px;
            }
        }

        @media only screen and (min-width: device.$tablet){
            display:-ms-grid;
            display:grid;

            -ms-grid-rows:auto;
            grid-template-rows:auto;

            -ms-grid-columns:1fr 1fr;
            grid-template-columns:1fr 1fr;
            grid-gap:50px;
            margin-top:0;

            -webkit-box-align:start;
            -ms-flex-align:start;
            align-items:start;

            .ingredients-wrapper{
                -ms-grid-column:1;
                -ms-grid-column-span:2;
                grid-column:1/3;
                display:-ms-grid;
                display:grid;
                -ms-grid-rows:auto;
                grid-template-rows:auto;
                -ms-grid-columns:1fr 50px 1fr;
                grid-template-columns:1fr 1fr;
                grid-gap:50px;

                &::before,
                &::after{
                    left:-100px;
                }
            }
        }

        @media only screen and (min-width: device.$laptop){
            display:block;
            max-width:1100px;
            margin:150px auto 100px auto;

            .ingredients-wrapper{
                -ms-grid-columns:1.5fr 1fr;
                grid-template-columns:1.5fr 1fr;
                -ms-grid-rows:1fr auto;
                grid-template-rows:1fr auto;
                margin:64px 0;
                background-color: var(--dogwood);
            }
        }

        @media only screen and (min-width: device.$desktop){
            .ingredients-wrapper{
                &::before,
                &::after{
                    left:50%;
                    transform: translateX(-50%);
                }
                &:before{
                    top:-64px;
                }

                &:after{
                    bottom:-64px;
                }
            }
        }
    }

    section.ingredients{
        width:100%;

        h5{
            margin:0;
            font-size:var(--h4);
        }

        ul{
            list-style-type:none;
            display:-webkit-box;
            display:-ms-flexbox;
            display:flex;
            -webkit-box-orient:vertical;
            -webkit-box-direction:normal;
                -ms-flex-direction:column;
                    flex-direction:column;
            gap:10px;
            padding-left:0;
            margin-bottom:0;

            li{
                position:relative;
                font-size:var(--h6);
                text-indent:10px;

                &::before{
                    content:'—';
                    position:relative;
                    right:10px;
                }
            }
        }

        @media only screen and (min-width: device.$tablet){
            height:100%;

            &:nth-of-type(1){
                -ms-grid-column:1;
                -ms-grid-column-span:1;
                grid-column:1/2;
            }
            &:nth-of-type(2){
                -ms-grid-column:2;
                -ms-grid-column-span:1;
                grid-column:2/3;
            }

            h5{
                font-size:var(--h5);
            }
        }

        @media only screen and (min-width: device.$laptop){
            height:auto;
            border:0;
            padding:0;
            width:auto;

            &:nth-of-type(1){
                -ms-grid-row:1;
                -ms-grid-row-span:1;
                grid-row:1/2;
                -ms-grid-column:1;
                -ms-grid-column-span:1;
                grid-column:1/2;
            }
            &:nth-of-type(2){
                -ms-grid-row:2;
                -ms-grid-row-span:1;
                grid-row:2/3;
                -ms-grid-column:2;
                -ms-grid-column-span:1;
                grid-column:2/3;
            }

            ul {
                -ms-flex-wrap:wrap;
                    flex-wrap:wrap;
                -webkit-box-orient:horizontal;
                -webkit-box-direction:normal;
                    -ms-flex-direction:row;
                        flex-direction:row;
                padding-left:0;
                gap:25px;

                li{
                    display:inline-block;
                    border:2px solid var(--dark-gray);
                    padding:15px;
                    font-size:var(--p);
                    text-indent:unset;

                    &::before{
                        border:0;
                        width:0;
                        height:0;
                        content:unset;
                    }	
                }
            }
        }
    }

    section.preparation{
        margin:32px 0;

        h2{
            margin:0;
        }

        p{
            font-size:var(--h6);
        }

        @media only screen and (min-width: device.$tablet){
            -ms-grid-column:1;
		    -ms-grid-column-span:2;
		    grid-column:1/3;
        }

        @media only screen and (min-width: device.$laptop){
            width:50%;
		    margin:140px 0px 150px 0px;
        }

    }

    section.nutrition-facts{
        border:1px solid var(--dark-gray);	
        padding:0.5rem;
        background-color:white;

        .border-bottom{
            border-bottom-width:.0625rem;
            border-bottom-style:solid;
            border-bottom-color:var(--dark-gray);
        }

        h3{
		    margin:0;
		    border-bottom-width:15px !important;
		    padding-bottom:10px;
		    margin-bottom:10px;
	    }

        table{
            width:100%;
            border-collapse:collapse;


            tr:not(:first-of-type) td:last-of-type{
                text-align:right;
            }
	    }

        .padding-bottom-10{
            padding-bottom:10px;
        }

        .padding-top-10{
            padding-top:10px;
        }

        .border-bottom-10{
            border-bottom-width:10px;
        }

        .padding-bottom-15{
            padding-bottom:15px;
        }

        .padding-top-15{
            padding-top:15px;
        }

        @media only screen and (min-width: device.$tablet){
            -ms-grid-column:1;
            -ms-grid-column-span:2;
            grid-column:1/3;
        }

        @media only screen and (min-width: device.$laptop){
            width:832px;
            margin:0 auto 150px auto;
            -webkit-transform:rotate(-4.95deg);
            -ms-transform:rotate(-4.95deg);
                    transform:rotate(-4.95deg);
        }
    }

</style>

<Layout page="About" theme="#ffc3ab">
    <Navigation slot="navbar"/>
    <main class="site-wrapper full-width">
        <div class="name">
            <h1>Mattia Bombelli</h1>
        </div>
        <section class="recipe">
            <section class="ingredients-wrapper">
                <section class="ingredients">
                    <h5>Ingredients</h5>
                    <ul>
                        <li>1 Mattia</li>
                        <li>100g French Expressionism and Gothic art</li>
                        <li>200g illustration and storytelling</li>
                        <li>2 tbsp web design</li>
                        <li>1 tsp frontend web development</li>
                    </ul>
                </section>
                <section class="ingredients">
                    <h5>For the sauce</h5>
                    <ul>
                        <li>1 adorable turtle</li>
                        <li>Handful of languages</li>
                        <li>A piano or a synthesizer</li>
                    </ul>
                </section>
            </section>

            <section class="preparation">
                <h2>Preparation</h2>
                <p>Marinate Mattia with French Expressionism and Gothic art, then add some finely chopped ardour for illustration and storytelling.</p>
                <p>Store him in the Illustration & Animation school of the European Institute of Design (IED) in Milan, Italy, for a few years.</p>
                <p>Once marinated, move him to Vancouver, Canada: keep stirring until he becomes a web developer through further college studies.</p>
                <p>Saut&eacute; in freelancing work. Once done, transfer to Keycafe and gently pat him with an extensive variety of multidisciplinary design projects. Repeat for several years until he becomes the company's Senior Designer.</p>
                <p>To serve, spread with a lovely turtle named Juanita. Top with a fascination for languages and music production. Serve warm.</p>
                <p>Good job! You can now enjoy your new multi-functional designer. 👨‍🍳</p>
            </section>

            <section class="nutrition-facts">
                <h3 class="border-bottom">Design Facts</h3>
                <table>
                    <tbody>
                        <tr>
                            <td colspan="2" class="h6-size padding-bottom-15">1 serving per container</td>
                        </tr>
                        <tr class="border-bottom border-bottom-10">
                            <td class="p-size padding-bottom-10">Serving Size</td>
                            <td class="p-size padding-bottom-10">1 Mattia</td>
                        </tr>
                        <tr>
                            <td class="h6-size padding-bottom-15 padding-top-10">Calories</td>
                            <td class="h6-size padding-bottom-15 padding-top-10">It depends</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>Quantity *</td>
                        </tr>

                        <tr class="border-bottom">
                            <td>Book Illustration</td>
                            <td>25%</td>
                        </tr>
                        <tr class="border-bottom">
                            <td>Conceptual Illustration</td>
                            <td>10%</td>
                        </tr>
                        <tr class="border-bottom">
                            <td>Web Design</td>
                            <td>20%</td>
                        </tr>
                        <tr class="border-bottom">
                            <td>UI Design</td>
                            <td>35%</td>
                        </tr>
                        <tr class="border-bottom">
                            <td>3D</td>
                            <td>20%</td>
                        </tr>
                        <tr class="border-bottom border-bottom-10">
                            <td>Motion Graphics</td>
                            <td>10%</td>
                        </tr>
                        <tr>
                            <td colspan="2" class="padding-top-15">* Values are an estimate based on an average work week. Keep hydrated. Refrigerate if too warm.<br />Website designed and developed with &#9825; by me.</td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </section>
        </section>    
    </main>
    <Footer slot="footer"/>
</Layout>